{% extends 'base.html.twig' %}

{% block title %}Hello ArticlesController!{% endblock %}

{% block body %}

    <div class="container">
        <h2>Article</h2>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            {{ form_start(form) }}

            <div class="form-group">
                <label for="textarea">{{ form_label(form.title) }}</label><br>
                {{ form_widget(form.title) }}
            </div>
            <div class="form-group">
                <label for="textarea">{{ form_label(form.author) }}</label><br>
                {{ form_widget(form.author) }}
            </div>

            <div class="form-error">
                {{ form_errors(form.author) }}
            </div>

            <div class="form-group">
                <label for="textarea">{{ form_label(form.content) }}</label><br>
                {{ form_widget(form.content) }}
            </div>

            <div class="form-group">
                <label for="">{{ form_label(form.category) }}</label><br>
                {{ form_widget(form.category) }}
            </div>

            <button type="submit">Save</button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}