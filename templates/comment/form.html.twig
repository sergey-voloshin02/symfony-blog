{#{% extends 'base.html.twig' %}#}

{#{% block title %}Hello{% endblock %}#}

{% block body %}
    <div class="container">
        <h2>Add comment</h2>
        <div class="card bg-warning "><br>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                {{ form_start(form) }}
                <div class="form-group">
                    <label for="textarea">{{ form_label(form.author) }}</label><br>
                    {{ form_widget(form.author) }}
                </div>
                <div class="form-group">
                    <label for="textarea">{{ form_label(form.content) }}</label><br>
                    {{ form_widget(form.content) }}
                </div>
                <button type="submit">Save</button>
                {{ form_end(form) }}<br>
            </div>
        </div>
    </div>
{% endblock %}